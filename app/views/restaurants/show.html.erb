<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>City: <%= @restaurant.city %></p>
<p>Capacity: <%= @restaurant.capacity %></p>
<p>
<%= link_to "Edit", edit_restaurant_path(@restaurant) %> | <%= link_to "Delete", restaurant_path(@restaurant), method: :delete %> | <%= link_to "Back", restaurants_path %>
</p>

<% @restaurant.reviews.each do |r| %>
  <p><%= r.comment %></p>
<% end %>


<h1>Add comment</h1>
<%= simple_form_for [@restaurant, Review.new], html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :reviewer %>
  <%= f.input :comment %>

  <%= f.button :submit %>
<% end %>
